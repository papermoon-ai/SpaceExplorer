<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Texts -->
    <style name="AppTheme.Text" />

    <!-- Texts Title -->
    <style name="AppTheme.Text.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Title.H2">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTheme.Text.Title.H3">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Text.Title.H4">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Texts Description -->
    <style name="AppTheme.Text.Description">
        <item name="android:lineSpacingExtra">10sp</item>
    </style>

    <style name="AppTheme.Text.Description.H3">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Text.Description.H4">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Text.Description.H3.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Texts Subtext -->
    <style name="AppTheme.Text.Subtext">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="AppTheme.Text.Subtext.H3">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Text.Subtext.H4">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- CardView -->
    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_marginStart">@dimen/base_margin</item>
        <item name="android:layout_marginTop">@dimen/big_margin</item>
        <item name="android:layout_marginEnd">@dimen/base_margin</item>
        <item name="contentPadding">@dimen/base_padding</item>
        <item name="cardBackgroundColor">?colorSurfaceVariant</item>
        <item name="android:elevation">@dimen/base_elevation</item>
        <item name="cardCornerRadius">@dimen/base_card_view_corner_radius</item>
    </style>

    <style name="CardViewItemStyle" parent="CardViewStyle">
        <item name="contentPadding">0dp</item>
    </style>

    <style name="CardViewStyleV2" parent="CardView">
        <item name="android:layout_marginStart">@dimen/base_margin</item>
        <item name="android:layout_marginTop">@dimen/big_margin</item>
        <item name="android:layout_marginEnd">@dimen/base_margin</item>
        <item name="contentPadding">@dimen/base_padding</item>
        <item name="cardBackgroundColor">?colorSurface</item>
        <item name="android:elevation">@dimen/base_elevation</item>
        <item name="cardCornerRadius">@dimen/big_card_view_corner_radius</item>
    </style>

    <!-- ImageButton -->
    <style name="RoundImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/base_image_button_width</item>
        <item name="android:layout_height">@dimen/base_image_button_height</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:padding">@dimen/image_button_padding</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>